{
  "name": "lplarecursos",
  "version": "0.6.0",
  "description": "Servidor REST de arquivos simples",
  "keywords": [
    "arquivos"
  ],
  "license": "ISC",
  "author": "LPLA-br",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": " cd ./test && jest --verbose",
    "build": "cd ./src && npm exec tsc",
    "start": "cd ./build && node index.js",
    "clear": "rm -r ./build/* || ls test/ | grep --invert-match '.*.js' | xargs -d '\n' -I {} rm ./test/{} || rm ./public/* ;",
    "start:prod": "if [[ ! -f ./public/client.sh ]]; then cp ./bin/client.sh ./public; fi && cd ./build && node index.js"
  },
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.8",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "multer": "^1.4.5-lts.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.1",
    "axios": "^1.9.0",
    "jest": "^29.7.0",
    "typescript": "^5.8.3"
  }
}
